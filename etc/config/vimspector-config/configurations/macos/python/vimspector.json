{
  "configurations": {
    "launch": {
      "adapter": "debugpy",
      "filetypes": [
        "python"
      ],
      "breakpoints": {
        "exception": {
          "raised": "Y",
          "uncaught": "Y"
        }
      },
      "configuration": {
        "name": "launch",
        "type": "python",
        "request": "launch",
        "python": "${HOME}/.pyenv/shims/python",
        "stopOnEntry": true,
        "console": "externalTerminal",
        "debugOptions": [],
        "program": "${file}"
      }
    }
  }
}
