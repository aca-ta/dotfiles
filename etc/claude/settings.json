{
  "env": {
    "DATABRICKS_WORKSPACE_PROFILE": "DEFAULT"
  },
  "permissions": {
    "allow": [
      "List(*)",
      "Fetch(https://*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(fd:*)",
      "Bash(npm run lint)",
      "Bash(uv run ruff)",
      "Bash(gh pr list)",
      "Bash(gh pr view)",
      "Bash(gh pr diff)",
      "Read(./**/*.py)",
      "Read(./**/*.ts)",
      "Read(./**/*.sh)"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__databricks_sql__execute_sql",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"hookSpecificOutput\": {\"hookEventName\": \"PreToolUse\", \"permissionDecision\": \"deny\", \"permissionDecisionReason\": \"execute_sql is NOT allowed. Use execute_sql_read_only instead.\"}}'"
          }
        ]
      },
      {
        "matcher": "mcp__databricks_sql__poll_sql_result",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"hookSpecificOutput\": {\"hookEventName\": \"PreToolUse\", \"permissionDecision\": \"allow\"}}'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title \"Claude Code\" -message \"Waiting for your response...\" -sound default"
          }
        ]
      }
    ]
  },
  "enabledMcpjsonServers": [
    "databricks_sql"
  ],
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true
  }
}
